CREATE TABLE IF NOT EXISTS userEntity (
  id TEXT PRIMARY KEY NOT NULL,
  name TEXT DEFAULT NULL,
  avatarImage TEXT DEFAULT NULL,
  bannerImage TEXT DEFAULT NULL,
  profileColor TEXT DEFAULT NULL,
  unreadNotificationCount INTEGER DEFAULT NULL,
  siteUrl TEXT DEFAULT NULL
);

upsertUser:
INSERT OR REPLACE INTO userEntity (
  id,
  name,
  avatarImage,
  bannerImage,
  profileColor,
  unreadNotificationCount
) VALUES ?;

getUserById:
SELECT * FROM userEntity WHERE id = ?;